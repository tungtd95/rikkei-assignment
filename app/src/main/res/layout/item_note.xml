<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlItem"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/itemColor">
    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding">
        <TextView
            android:id="@+id/tvNoteName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:textColor="@color/mainPart"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/ivClock"
            android:layout_width="@dimen/clock_image_height"
            android:layout_height="@dimen/clock_image_height"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlSpace"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlTitle"
        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_marginEnd="@dimen/layout_margin">
    </RelativeLayout>
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlSpace"
        android:layout_margin="@dimen/layout_margin"
        android:textColor="@color/mainPart"
        android:maxLines="4"/>
    <TextView
        android:id="@+id/tvClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/layout_margin"/>
</RelativeLayout>